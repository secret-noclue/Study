    // --- 2. Interaction Logic ---

    // Tab Switching
    function switchTab(target) {
        // Update buttons
        document.querySelectorAll('.tab-btn').forEach(btn => {
            if(btn.dataset.target === target) {
                btn.classList.remove('border-transparent', 'text-stone-500', 'hover:text-stone-700');
                btn.classList.add('border-amber-500', 'text-amber-600');
            } else {
                btn.classList.add('border-transparent', 'text-stone-500', 'hover:text-stone-700');
                btn.classList.remove('border-amber-500', 'text-amber-600');
            }
        });

        // Update content
        document.querySelectorAll('.tab-content').forEach(content => {
            content.classList.add('hidden');
        });
        const activeContent = document.getElementById(`${target}-content`);
        activeContent.classList.remove('hidden');
    }

    // Process Stepper Logic
    function setProcessStep(index) {
        // Update circles
        const circles = document.querySelectorAll('.step-circle');
        circles.forEach((circle, i) => {
            if (i === index) {
                circle.classList.add('active', 'bg-amber-600', 'text-white', 'border-amber-600');
                circle.classList.remove('bg-white', 'text-stone-500', 'border-stone-300');
            } else {
                circle.classList.remove('active', 'bg-amber-600', 'text-white', 'border-amber-600');
                circle.classList.add('bg-white', 'text-stone-500', 'border-stone-300');
            }
        });

        // Update Content
        const contentDiv = document.getElementById('process-content');
        const step = processSteps[index];
        
        // Simple fade effect
        contentDiv.style.opacity = '0';
        contentDiv.style.transform = 'translateY(10px)';
        
        setTimeout(() => {
            contentDiv.innerHTML = `
                <span class="text-amber-500 font-bold tracking-wider text-sm uppercase mb-2 block">Stage ${index + 1}</span>
                <h3 class="text-2xl font-bold text-stone-800 mb-4">${step.title}</h3>
                <p class="text-stone-600 leading-relaxed mb-6">${step.desc}</p>
                <div class="inline-flex items-center gap-2 text-sm text-stone-500 bg-stone-50 px-4 py-2 rounded-full">
                    <span>${step.icon}</span> <span>${step.sub}</span>
                </div>
            `;
            contentDiv.style.opacity = '1';
            contentDiv.style.transform = 'translateY(0)';
        }, 300);
    }

    // Scroll helper
    function scrollToSection(id) {
        document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
        // Close mobile menu if open
        const mobileMenu = document.getElementById('mobile-menu');
        if (!mobileMenu.classList.contains('hidden')) {
            mobileMenu.classList.add('hidden');
        }
    }

    // Mobile Menu Toggle
    document.getElementById('mobile-menu-btn').addEventListener('click', () => {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
    });


    // --- 3. Chart Initialization ---

    window.onload = function() {
        
        // Radar Chart: Competencies
        const ctxRadar = document.getElementById('competencyChart').getContext('2d');
        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: [
                    ['Personal', '(Creativity, Tenacity)'], 
                    ['Business', '(Vision, Networking)'], 
                    ['Interpersonal', '(Charisma, Respect)']
                ],
                datasets: [{
                    label: 'Competency Balance',
                    data: [90, 85, 80], // Illustrative high values
                    backgroundColor: 'rgba(245, 158, 11, 0.2)', // Amber-500 with opacity
                    borderColor: 'rgba(217, 119, 6, 1)', // Amber-600
                    pointBackgroundColor: 'rgba(255, 255, 255, 1)',
                    pointBorderColor: '#d97706',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#d97706',
                    borderWidth: 2
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: { color: '#e7e5e4' }, // Stone-200
                        grid: { color: '#e7e5e4' },
                        pointLabels: {
                            font: { size: 12, family: "'Inter', sans-serif" },
                            color: '#44403c' // Stone-700
                        },
                        suggestedMin: 0,
                        suggestedMax: 100,
                        ticks: { display: false } // Hide numbers for cleaner look
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                // Custom text updates based on hover
                                const desc = {
                                    0: "Personal: Determination, Integrity, Emotional Balance.",
                                    1: "Business: Resource Management, Negotiation.",
                                    2: "Interpersonal: Communication, Delegation, Engagement."
                                };
                                document.getElementById('comp-desc').innerText = desc[context.dataIndex];
                                document.getElementById('comp-title').innerText = context.chart.data.labels[context.dataIndex][0] + " Competencies";
                                return context.formattedValue + '% Mastery';
                            }
                        }
                    }
                }
            }
        });

        // Doughnut Chart: Impact
        const ctxDoughnut = document.getElementById('impactChart').getContext('2d');
        const impactChart = new Chart(ctxDoughnut, {
            type: 'doughnut',
            data: {
                labels: jennyData.labels,
                datasets: [{
                    data: jennyData.data,
                    backgroundColor: jennyData.colors,
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                maintainAspectRatio: false,
                layout: {
                    padding: 20
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            padding: 20,
                            font: { family: "'Inter', sans-serif", size: 11 },
                            color: '#57534e'
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return ' â‚±' + context.parsed.toLocaleString();
                            }
                        }
                    }
                },
                onClick: (e, activeElements) => {
                    if (activeElements.length > 0) {
                        const index = activeElements[0].index;
                        // Update Narrative Text
                        const detailDiv = document.getElementById('impact-detail');
                        const benefitText = document.getElementById('benefit-text');
                        
                        // Highlight value
                        detailDiv.querySelector('.text-4xl').innerText = 'â‚±' + jennyData.data[index].toLocaleString();
                        detailDiv.querySelector('h3').innerText = jennyData.labels[index];
                        
                        // Update desc
                        benefitText.innerHTML = jennyData.descriptions[index];
                    } else {
                        // Reset
                        document.querySelector('#impact-detail .text-4xl').innerText = 'â‚±1,425,000';
                        document.querySelector('#impact-detail h3').innerText = 'Total Economic Value';
                        document.getElementById('benefit-text').innerText = "Click the chart to explore how revenue is distributed.";
                    }
                }
            }
        });
    };
</script>
